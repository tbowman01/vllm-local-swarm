# üè≠ Production Environment Configuration
# vLLM Local Swarm - Enterprise Production Settings
# 
# ‚ö†Ô∏è  SECURITY WARNING: Never commit this file with real secrets!
# Copy to .env.production and fill with actual production values

# üîê JWT & Authentication Secrets (CRITICAL SECURITY)
JWT_SECRET_KEY_PROD=your-super-secure-256-bit-jwt-secret-key-minimum-64-characters-required-for-production-use
API_KEY_SECRET_PROD=your-api-key-encryption-secret-minimum-64-characters-for-production-security

# üóÑÔ∏è Database Configuration
AUTH_DATABASE_URL_PROD=postgresql://vllm_auth:secure_password_here@postgres-prod:5432/vllm_auth_prod
POSTGRES_DB_PROD=vllm_auth_prod
POSTGRES_USER_PROD=vllm_auth
POSTGRES_PASSWORD_PROD=secure_database_password_minimum_32_characters

# üìä Redis Configuration  
REDIS_URL_PROD=redis://:secure_redis_password@redis-prod:6379/0
REDIS_PASSWORD_PROD=secure_redis_password_minimum_32_characters

# üîç Qdrant Vector Database
QDRANT_URL_PROD=http://qdrant-prod:6333
QDRANT_API_KEY_PROD=secure_qdrant_api_key_if_needed

# ü§ñ vLLM Model Service
VLLM_MODEL_URL_PROD=http://your-vllm-model-service:8000
VLLM_API_KEY_PROD=your_vllm_api_key_if_required

# üìà Monitoring & Observability
GRAFANA_ADMIN_PASSWORD_PROD=secure_grafana_admin_password
PROMETHEUS_RETENTION_DAYS=30

# üîí SSL/TLS Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem

# üåê External Service URLs (if applicable)
EXTERNAL_AUTH_PROVIDER_URL=https://your-auth-provider.com
EXTERNAL_MODEL_API_URL=https://api.your-model-provider.com
BACKUP_STORAGE_URL=https://your-backup-storage.com

# üìß Notification Settings
ALERT_EMAIL=ops@yourcompany.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
PAGER_DUTY_KEY=your_pagerduty_integration_key

# üîÑ Operational Settings
LOG_LEVEL=warn
MAX_LOG_SIZE=100M
LOG_RETENTION_DAYS=90
BACKUP_FREQUENCY=daily
HEALTH_CHECK_INTERVAL=30s

# üö® Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
RATE_LIMIT_GLOBAL=10000
RATE_LIMIT_WINDOW=3600000

# üìä Performance Tuning
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=30000
CONNECTION_POOL_SIZE=50
MEMORY_LIMIT_MB=4096

# üîê Additional Security Settings
ENFORCE_HTTPS=true
SECURE_COOKIES=true
SESSION_SECURE=true
HSTS_MAX_AGE=31536000
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# üåç Multi-Region Settings (if applicable)
REGION=us-east-1
AVAILABILITY_ZONE=us-east-1a
CLUSTER_NAME=vllm-prod-cluster
NAMESPACE=vllm-production

# üíæ Storage Configuration
DATA_VOLUME_SIZE=100Gi
LOG_VOLUME_SIZE=20Gi
BACKUP_VOLUME_SIZE=200Gi
STORAGE_CLASS=ssd

# üî¨ Feature Flags
ENABLE_ADVANCED_METRICS=true
ENABLE_TRACING=true
ENABLE_PROFILING=false
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_EXPERIMENTAL_FEATURES=false