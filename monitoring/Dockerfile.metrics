# ðŸ“Š Metrics Collector Container
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY monitoring/requirements.txt /app/

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy metrics collector
COPY monitoring/metrics_collector.py /app/

# Create non-root user
RUN useradd -m -u 1000 metrics && chown -R metrics:metrics /app

USER metrics

ENV PYTHONUNBUFFERED=1

EXPOSE 8090

CMD ["python", "metrics_collector.py"]