# vLLM Local Swarm Configuration

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
JWT_SECRET_KEY=dev-jwt-secret-key-change-this-in-production-min32chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRATION_DAYS=30
VLLM_INTERNAL_API_KEY=dev-api-key-change-this-in-production
AUTH_SERVICE_URL=http://auth-service:8005
AUTH_PORT=8005

# ===========================================
# DATABASE PASSWORDS & SECRETS
# ===========================================
LANGFUSE_DB_PASSWORD=langfuse123
CLICKHOUSE_PASSWORD=langfuse123
LANGFUSE_SECRET=dev-secret-key-change-this-in-production-32chars
LANGFUSE_SALT=dev-salt-change-this-in-production-32chars
LANGFUSE_ENCRYPTION_KEY=abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ123456789abc
DATABASE_URL=postgresql+asyncpg://langfuse:langfuse123@langfuse-db:5432/auth
REDIS_URL=redis://redis:6379

# ===========================================
# LANGFUSE CONFIGURATION
# ===========================================
LANGFUSE_URL=http://localhost:3000
LANGFUSE_PUBLIC_KEY=pk-lf-dev-public-key-12345
LANGFUSE_SECRET_KEY=sk-lf-dev-secret-key-67890
NEXTAUTH_SECRET=dev-secret-key-change-this-in-production-32chars
NEXTAUTH_URL=http://localhost:3000
SALT=dev-salt-change-this-in-production-32chars

# ===========================================
# OPENAI PROXY (OPTIONAL)
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
PROXY_RATE_LIMIT=100

# ===========================================
# VLLM MODEL CONFIGURATION
# ===========================================
# Large model settings (optional)
LARGE_MODEL=microsoft/DialoGPT-large
LARGE_MODEL_TP=2
LARGE_MODEL_GPU_COUNT=2

# ===========================================
# RAY CLUSTER CONFIGURATION
# ===========================================
RAY_WORKER_REPLICAS=2

# ===========================================
# RESOURCE LIMITS
# ===========================================
# Memory limits for services
REDIS_MAX_MEMORY=2gb
CLICKHOUSE_MAX_MEMORY=4gb
RAY_OBJECT_STORE_MEMORY=1000000000

# ===========================================
# NETWORKING
# ===========================================
# Custom ports (if needed)
REDIS_PORT=6379
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_TCP_PORT=9000
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334
LANGFUSE_PORT=3000
VLLM_PHI_PORT=8000
VLLM_LARGE_PORT=8001
OPENAI_PROXY_PORT=8002
RAY_DASHBOARD_PORT=8265
RAY_CLIENT_PORT=10001
OPEN_WEBUI_PORT=8080
LANGFLOW_PORT=7860

# ===========================================
# DEPLOYMENT PROFILES
# ===========================================
# Available profiles: proxy, webui, langflow, large-model
# Use: docker-compose --profile proxy up
COMPOSE_PROFILES=

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=true

# ===========================================
# SECURITY (PRODUCTION)
# ===========================================
# Set to true in production
SECURITY_ENABLED=false
TLS_ENABLED=false
AUTH_REQUIRED=false

# ===========================================
# GPU CONFIGURATION
# ===========================================
# NVIDIA GPU runtime
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility